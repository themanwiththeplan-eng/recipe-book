<div class='card'>
  <h3 class='card-header'>Edit Dish</h3>
  <form class='card-body edit-post-form'>
    <label for='post-title' class='form-label'>Dish Name</label>
    <input
      name='post-title'
      type='text'
      value='{{post.title}}'
      class='form-input'
    />

    <label class='form-label' for='content'>Recipe</label>
    <input
      name='content'
      type='text'
      value='{{post.content}}'
      class='form-input'
    />

    <button type='submit' class='btn'>Update Dish</button>
    <button type='button' class='delete-post-btn btn'>Delete Dish</button>
  </form>
</div>

<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>